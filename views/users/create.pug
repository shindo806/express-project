extends ../layouts/common

block content
    .container
        h1 Create new User

        if errors
            each error in errors
                .alert.alert-danger= error
        form(action="/users/create", method="POST", enctype="multipart/form-data")
            .form-group
                label(for="name") Name
                input(type="text", id="name", name="name" placeholder="Enter your name here", class="form-control", value=values ? values.name : "") 
            .form-group   
                label(for="phone") Phone
                input(type="text", id="phone", name="phone" placeholder="Enter your phone number here", class="form-control", value=values? values.phone : "") 
            .form-group   
                label.mr-2(for="avatar") Avatar
                input(type="file", name="avatar") 
                    
            button(class="btn btn-primary mt-2") Create