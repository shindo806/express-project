extends ../layouts/common

block content
    div(class="container")
        h1 Search product

        a(href="/products", class="btn btn-primary mb-2 ml-2") Back to Products Homepage

        form(action="/products/search" method="GET")
            div(class="form-group mx-sm-3 mb-2")
                label(for="search" class="sr-only") Search
                input(type="text", id="search", name="q", class="form-control")
            
            button(href="/products/search/", class="btn btn-primary ml-2") Search

        table.table
            thead
                tr
                    th(scope='col') Name
                    th(scope="col") More infomation
            tbody
                each item in product
                    tr                        
                        td
                            p= item.name
                        td
                            a(href="/products/view/" + item.id, class="btn btn-info ml-5") View


